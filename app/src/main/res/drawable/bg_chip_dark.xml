<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded chip -->
    <corners android:radius="10dp"/>

    <!-- Dark semi-transparent background -->
    <solid android:color="#331A1D24"/>

    <!-- Optional thin border -->
    <stroke
        android:width="1dp"
        android:color="#44FFFFFF"/>

    <!-- Padding if used directly as background -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>
</shape>
